@model ActorCompany.Company
@using (Html.BeginForm("Create", "Company"))
{
    <div class="container">
        <div class="col-md-12 form-group">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        </div>
        <div class="col-md-12 form-group">
            @Html.LabelFor(model => model.Address)
            @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
        </div> 
        <div class="col-md-12 form-group">
            @Html.LabelFor(model => model.Tel)
            @Html.TextBoxFor(model => model.Tel, new { @class = "form-control" })
        </div> 
        <div class="col-md-12 form-group">
            @Html.LabelFor(model => model.ZipCode)
            @Html.TextBoxFor(model => model.ZipCode, new { @class = "form-control" })
        </div> 
        <div class="col-md-12 text-right form-group">
            <input type="submit" value="Create" class="btn-primary btn form-control" />
        </div>
    </div>
}